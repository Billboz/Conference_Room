<div class="container">

    <h1>Welcome To The Conference App</h1>

    <div class="container">

        <h2>Please sign in</h2>

      <%= form_tag signin_path, class: 'form-inline' do %>
       <div class="form-group">
           <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Enter your email', :require => true, :autofocus => true %>
        </div>
         <div class="form-group">
            <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password', :require => true %>
       </div>
       <div class="form-group">
         <%= check_box_tag 'checkbox', 'yes', false %>Remember me
         <%= submit_tag 'Sign in', class: 'btn btn-sm' %>
       </div>
      <% end %>
    </div>
</br>
  <%= link_to 'Sign Up Here', signup_path, class: 'btn btn-primary btn-med', role: 'button', style: 'float: left'  %>

</div>