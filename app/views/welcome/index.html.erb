<div class="container">

    <h1>Welcome To The Conference App</h1>

    <div class="container">

        <h2>Please sign in</h2>

         <div>
            <%= form_tag signin_path, class: 'form' do %>
            <%= text_field_tag 'email', nil, placeholder: 'Enter your email', :require => true, :autofocus => true %>
            <%= password_field_tag 'password', nil, placeholder: 'Password', :require => true %>
            <%= check_box_tag 'checkbox', 'yes', false %>Remember me
            <%= submit_tag 'Sign in', class: 'btn btn-sm' %>
           <% end %>
         </div>

    </div>

    <%= link_to 'Sign Up Here', signup_path  %>
    <h2>is there a current user? <%= current_user.present? %></h2>

</div>