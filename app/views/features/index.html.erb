<h3 class="text-center cst_h3">
  <%= link_to 'Add New', new_feature_path, class: 'btn btn-primary btn-sm', role: 'button', style: 'float: left' %>
  Features - Listing
</h3>

<table class="table">
  <thead>
  <tr>
    <th>Feature</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= link_to feature do %>
              <span class="glyphicon glyphicon-eye-open" title="Display"></span>
          <% end %>
        </td>
        <td><%= link_to edit_feature_path(feature) do %>
              <span class="glyphicon glyphicon-pencil" title="Edit"></span>
          <% end %>
        </td>
        <td><%= link_to feature, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" title="Remove"></span>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

